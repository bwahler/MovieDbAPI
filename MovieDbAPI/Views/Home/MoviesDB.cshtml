@model IEnumerable<MovieDbAPI.Models.Movies>


@foreach (var m in Model)
{

    <h1>@m.Title</h1><br />
    <h4><a href="/Movies/Add?movieID=@m.MovieID">Add to Favorites</a></h4><br />
    <img src=@m.Poster />
    <br /><br />

    @*we could get fancy later and show certain data intially and upon click (command onclick) appear the rest of the data
        then once the mouse moves away, hide the data*@
    <p>Directed by: @m.Director</p>
    <p>Year made: @m.Year</p>
    <p>Metacritic rating: @m.Rating</p>
    <p>Genres: @m.Genre</p>
    <p>Motion Picture Rating: @m.MPRating</p>
    <p>Synopsis: @m.Synopsis</p>
}